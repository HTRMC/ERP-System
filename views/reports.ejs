<!DOCTYPE html>
<html>
  <head>
    <title>Reports</title>
    <link rel="stylesheet" href="/css/style-reports.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  <body>
    <div class="main-container">
      <div class="real-main-container">
        <div class="sidebar-container">
          <div class="menu-container">
            <div class="top-menu-container">
              <div class="menu-icon">
                <img
                  src="/images/hamburger.png"
                  alt="menu-knop"
                  draggable="false"
                />
              </div>
              <div class="logo">
                <img src="/images/logo.png" alt="Logo" draggable="false" />
              </div>
            </div>
            <div class="bottom-menu-container">
              <div class="dashboard-container">
                <a href="/dashboard" class="dashboard">
                  <i class="icon-dashboard"></i>
                  <span>Dashboard</span>
                </a>
              </div>
            </div>
          </div>
          <div class="sidebar-menu">
            <ul>
              <li>
                <a href="/projects">
                  <i class="icon-ui-elements"></i>
                  <span>Projecten</span>
                </a>
              </li>
              <% if (user.role_id === 3) { %>
              <li>
                <a href="/users">
                  <i class="icon-form-elements"></i>
                  <span>Gebruikers</span>
                </a>
              </li>
              <% } %>
              <li>
                <a href="/reports/hours" class="active">
                  <i class="icon-tables"></i>
                  <span>Rapporten</span>
                </a>
              </li>
              <li>
                <a href="/invoices">
                  <i class="icon-icons"></i>
                  <span>Facturen</span>
                </a>
              </li>
            </ul>
          </div>
        </div>

        <div class="container">
          <div class="top-container">
            <div class="search-bar">
              <i class="fas fa-search"></i>
              <input type="search" name="search" placeholder="Zoeken" />
            </div>
          </div>
          <div class="sorting-container">
            <div class="sorting-name">
              <button class="sort-button" onclick="sortReports('project')">
                Sorteer op Project
              </button>
            </div>
            <div class="sorting-period">
              <button class="sort-button" onclick="sortReports('period')">
                Sorteer op Periode
              </button>
            </div>
            <div class="sorting-hours">
              <button class="sort-button" onclick="sortReports('hours')">
                Sorteer op Gewerkte Uren
              </button>
            </div>
          </div>
          <div class="content-container">
            <% if (report && report.length > 0) { %>
            <table>
              <thead>
                <tr>
                  <th>Project</th>
                  <th>Periode</th>
                  <th>Gewerkte Uren</th>
                </tr>
              </thead>
              <tbody>
                <% report.forEach(row => { %>
                <tr>
                  <td><%= row.project_name %></td>
                  <td><%= row.date || row.week || row.month %></td>
                  <td><%= row.hours_worked %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
            <% } else { %>
            <p>Geen gegevens beschikbaar voor de geselecteerde periode.</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
