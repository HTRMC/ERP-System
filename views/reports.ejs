<!DOCTYPE html>
<html>
  <head>
    <title>Reports</title>
    <link rel="stylesheet" href="/css/style-reports.css" />
  </head>
  <body>
    <div class="main-container">
      <div class="container">
        <div class="top-container">
          <button class="dashboard-button" href="/dashboard">
            Back to dashboard
          </button>
          <div class="search-bar">
            <i class="fas fa-search"></i>
            <input type="search" name="search" placeholder="Search" />
          </div>
        </div>
        <div class="sorting-container">
          <div class="sorting-name">
            <button class="sort-button" onclick="sortReports('project')">
              Sort by Project
            </button>
          </div>
          <div class="sorting-period">
            <button class="sort-button" onclick="sortReports('period')">
              Sort by Period
            </button>
          </div>
          <div class="sorting-hours">
            <button class="sort-button" onclick="sortReports('hours')">
              Sort by Hours Worked
            </button>
          </div>
        </div>
        <div class="content-container">
          <% if (report && report.length > 0) { %>
          <table>
            <thead>
              <tr>
                <th>Project</th>
                <th>Period</th>
                <th>Hours Worked</th>
              </tr>
            </thead>
            <tbody>
              <% report.forEach(row => { %>
              <tr>
                <td><%= row.project_name %></td>
                <td><%= row.date || row.week || row.month %></td>
                <td><%= row.hours_worked %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
          <% } else { %>
          <p>No data available for the selected period.</p>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
