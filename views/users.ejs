<!DOCTYPE html>
<html>
  <head>
    <title>Users</title>
    <link rel="stylesheet" href="/css/style-user.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  <body>
    <div class="main-container">
      <div class="real-main-container">
        <div class="sidebar-container">
          <div class="menu-container">
            <div class="top-menu-container">
              <div class="menu-icon">
                <img
                  src="/images/hamburger.png"
                  alt="menu-knop"
                  draggable="false"
                />
              </div>
              <div class="logo">
                <img src="/images/logo.png" alt="Logo" draggable="false" />
              </div>
            </div>
            <div class="bottom-menu-container">
              <div class="dashboard-container">
                <a href="/dashboard" class="dashboard">
                  <i class="icon-dashboard"></i>
                  <span>Dashboard</span>
                </a>
              </div>
            </div>
          </div>
          <div class="sidebar-menu">
            <ul>
              <li>
                <a href="/projects">
                  <i class="icon-ui-elements"></i>
                  <span>Projecten</span>
                </a>
              </li>
              <% if (user.role_id === 3) { %>
              <li>
                <a href="/users " class="active">
                  <i class="icon-form-elements"></i>
                  <span>Gebruikers</span>
                </a>
              </li>
              <% } %>
              <li>
                <a href="/reports/hours">
                  <i class="icon-tables"></i>
                  <span>Rapporten</span>
                </a>
              </li>
              <li>
                <a href="/invoices">
                  <i class="icon-icons"></i>
                  <span>Facturen</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
        <div class="container">
          <div class="top-container">
            <div class="search-bar">
              <i class="fas fa-search"></i>
              <input type="search" name="search" placeholder="Zoeken" />
            </div>
            <button class="add-user" onclick="toggleForm()">
              <i class="fas fa-plus"></i> Gebruiker Toevoegen
            </button>
          </div>
          <div class="sorting-container">
            <div class="sorting-name">
              <button class="sort-button" onclick="sortUsers('name')">
                Sorteer op Naam
              </button>
            </div>
            <div class="sorting-status">
              <button class="sort-button" onclick="sortUsers('status')">
                Sorteer op Status
              </button>
            </div>
          </div>
          <div class="content-container">
            <div class="user-details" onclick="toggleDetails(this)">
              <div class="user-info">
                <div class="user-picture">
                  <img
                    src="https://via.placeholder.com/50"
                    alt="Gebruikersfoto"
                  />
                </div>
                <div class="user-name">John Doe</div>
                <div class="user-email">john.doe@example.com</div>
                <div class="user-hours">8 uur</div>
                <div class="user-status clocked-in">Ingeklokt</div>
              </div>
              <div class="additional-details">
                <div class="detail-container">
                  <div class="detail">Detail 1</div>
                  <div class="detail">Detail 2</div>
                  <div class="detail">Detail 3</div>
                </div>
              </div>
            </div>
            <div class="user-details" onclick="toggleDetails(this)">
              <div class="user-info">
                <div class="user-picture">
                  <img
                    src="https://via.placeholder.com/50"
                    alt="Gebruikersfoto"
                  />
                </div>
                <div class="user-name">Jane Smith</div>
                <div class="user-email">jane.smith@example.com</div>
                <div class="user-hours">-</div>
                <div class="user-status">Uitgeklokt</div>
              </div>
              <div class="additional-details">
                <div class="detail-container">
                  <div class="detail">Detail 1</div>
                  <div class="detail">Detail 2</div>
                  <div class="detail">Detail 3</div>
                </div>
              </div>
            </div>
            <!-- Voeg meer user-details divs toe indien nodig -->
          </div>
        </div>
      </div>
    </div>

    <!-- Pop-up formulier -->
    <div id="popup-form" class="popup-form">
      <div class="form-content">
        <% if (user.role_id === 3) { %>
        <h2>Nieuwe Gebruiker Toevoegen</h2>
        <% if (error) { %>
        <p style="color: red"><%= error %></p>
        <% } %>
        <form action="/users/register" method="post">
          <label for="name">Naam:</label>
          <input type="text" id="name" name="name" required />
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" required />
          <label for="password">Wachtwoord:</label>
          <input type="password" id="password" name="password" required />
          <label for="role_id">Rol:</label>
          <select id="role_id" name="role_id">
            <option value="1">Werknemer</option>
            <option value="2">Manager</option>
            <option value="3">Beheerder</option>
          </select>
          <button type="submit">Registreren</button>
        </form>
        <% } %>
      </div>
    </div>

    <script>
      function toggleForm() {
        var popup = document.getElementById("popup-form");
        popup.classList.toggle("show");
      }

      function toggleDetails(container) {
        container.classList.toggle("expanded");
      }

      // Close the form when clicking outside of it
      window.addEventListener("click", function (event) {
        var popup = document.getElementById("popup-form");
        var formContent = document.querySelector(".popup-form .form-content");
        if (
          popup.classList.contains("show") &&
          !formContent.contains(event.target) &&
          event.target !== document.querySelector(".add-user")
        ) {
          toggleForm();
        }
      });

      // Close the form when pressing the "Esc" key
      window.addEventListener("keydown", function (event) {
        if (event.key === "Escape") {
          var popup = document.getElementById("popup-form");
          if (popup.classList.contains("show")) {
            toggleForm();
          }
        }
      });
    </script>
  </body>
</html>
